@model List<PortfolioMvc.Models.ProjectModel>

@{
    ViewBag.Title = "Projects | Razaz Ayoub";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="projects" class="portfolio section py-5">
    <div class="container" data-aos="fade-up">

        <div class="section-title text-center mb-5">
            <h2>Projects</h2>
            <p>Here’s a selection of the systems I’ve developed using modern .NET technologies.</p>
        </div>

        <div class="row portfolio-container gy-4 justify-content-center">
            @foreach (var p in Model)
            {
                <div class="col-lg-4 col-md-6" data-aos="zoom-in">
                    <div class="service-item text-center p-4 shadow-sm rounded h-100">
                        <i class="bi bi-gear service-icon"></i>
                        <h4 class="fw-bold">@p.Title</h4>
                        <p>@p.Description</p>
                        <a href="@p.Link" class="btn btn-outline-primary mt-2" target="_blank" style="display:none;">View Project</a>
                    </div>
                </div>
            }
        </div>

    </div>
</section>
