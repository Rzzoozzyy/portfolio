@model List<PortfolioMvc.Models.ProjectModel>

@{
    ViewBag.Title = "Portfolio | Razaz Ayoub";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- ======= Hero Section ======= -->
<section id="hero" class="hero section">
    <img src="/assets/img/hero-bg.png" alt="" data-aos="fade-in">

    <div class="container text-center" data-aos="zoom-out" data-aos-delay="100">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <h2>Razaz Ayoub</h2>
                <p>
                    Senior .NET Developer & Software Architect with 7+ years of experience building enterprise-grade applications.
                </p>
                <a href="/Home/About" class="btn-get-started">About Me</a>
            </div>
        </div>
    </div>
</section>

<!-- ======= Portfolio Section ======= -->
<section id="portfolio" class="portfolio section light-background py-5">
    <div class="container" data-aos="fade-up">

        <div class="section-title text-center mb-5 hideme">
            <h2>My Portfolio</h2>
            <p>A showcase of key projects and solutions I’ve developed using modern .NET technologies.</p>

            <!-- Portfolio Filters -->
            <ul id="portfolio-filters" class="list-inline mt-4">
                <li class="list-inline-item active" data-filter="*">All</li>
                <li class="list-inline-item" data-filter=".backend">Backend</li>
                <li class="list-inline-item" data-filter=".frontend">Frontend</li>
                <li class="list-inline-item" data-filter=".cloud">Cloud</li>
            </ul>
        </div>

        <div class="row portfolio-container gy-4 hideme">
            @foreach (var p in Model)
            {
                <div class="col-lg-4 col-md-6 portfolio-item backend" data-aos="zoom-in">
                    <div class="portfolio-wrap shadow-sm rounded bg-white h-100 p-3 text-center">
                        @* Optional image: <img src="@p.ImageUrl" class="img-fluid rounded mb-3" alt="@p.Title" /> *@
                        <div class="portfolio-info">
                            <h4 class="fw-bold">@p.Title</h4>
                            <p class="text-muted">@p.Description</p>
                            <div class="portfolio-links mt-2">
                                <a href="@p.Link" target="_blank" title="More Details" class="btn btn-outline-primary">
                                    <i class="bi bi-link-45deg"></i> View
                                </a>
                                @* Lightbox Example:
                                <a href="@p.ImageUrl" data-gallery="portfolioGallery" class="portfolio-lightbox" title="@p.Title">
                                    <i class="bi bi-arrows-fullscreen"></i>
                                </a>
                                *@
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<!-- ======= Key Projects Section ======= -->
<section id="projects" class="portfolio section py-5 bg-light">
    <div class="container" data-aos="fade-up">

        <div class="section-title text-center mb-5">
            <h2 class="fw-bold text-uppercase">Key Projects</h2>
            <p class="text-muted">
                Highlighting some of the major systems I’ve built using modern .NET technologies.
            </p>
        </div>

        <div class="row gy-4 justify-content-center">
            @foreach (var p in Model)
            {
                <div class="col-lg-4 col-md-6" data-aos="zoom-in" data-aos-delay="100">
                    <a href="@p.Link" target="_blank" class="text-decoration-none project-card">
                        <div class="card border-0 shadow-sm rounded-4 overflow-hidden h-100 position-relative">
                            <div class="project-img-wrapper">
                                <img src="@p.ImageUrl" alt="@p.Title" class="img-fluid project-img" />
                                <div class="overlay d-flex align-items-center justify-content-center">
                                    <span class="btn btn-light fw-semibold rounded-pill px-4 py-2 hideme">
                                        <i class="bi bi-box-arrow-up-right me-2"></i> View Project
                                    </span>
                                </div>
                            </div>
                            <div class="card-body text-center p-4">
                                <h5 class="fw-bold text-dark mb-2">@p.Title</h5>
                                <p class="text-muted small mb-0">@p.Description</p>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>

    </div>
</section>

<!-- ======= Contact Section ======= -->
<section id="contact" class="contact section light-background py-5">
    <div class="container" data-aos="fade-up">

        <div class="section-title text-center mb-5">
            <h2>Contact Me</h2>
            <p>Feel free to reach out for freelance, consulting, or full-time opportunities.</p>
        </div>

        <div class="row justify-content-center text-center">
            <div class="col-lg-8">
                <p><i class="bi bi-geo-alt"></i> Abu Dhabi, UAE</p>
                <p><i class="bi bi-envelope"></i> <a href="mailto:RuzzaAyoub@gmail.com">RuzzaAyoub@gmail.com</a></p>
                <p class="hideme">
                    <a href="tel:+971552120140">
                        <i class="bi bi-phone"></i> +971 55 212 0140
                    </a>
                </p>

                <div class="social-links mt-3 hideme">
                    <a href="#" class="twitter hideme" target="_blank"><i class="bi bi-twitter-x"></i></a>
                    <a href="https://www.facebook.com/RuzzaAyoub" class="facebook" target="_blank"><i class="bi bi-facebook"></i></a>
                    <a href="https://wa.me/+971552120140" class="whatsapp hideme" target="_blank">
                        <i class="bi bi-whatsapp"></i>
                    </a>

                    <a href="#" class="instagram hideme" target="_blank"><i class="bi bi-instagram"></i></a>
                    <a href="https://www.linkedin.com/in/razaz-ayoub-4b93b3129/" class="linkedin" target="_blank"><i class="bi bi-linkedin"></i></a>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        // Portfolio filtering with Isotope
        var portfolioIsotope = new Isotope('.portfolio-container', {
            itemSelector: '.portfolio-item'
        });

        $('#portfolio-filters li').on('click', function () {
            $('#portfolio-filters li').removeClass('active');
            $(this).addClass('active');
            portfolioIsotope.arrange({ filter: $(this).data('filter') });
        });
    </script>
}
