        <div class="container-fluid position-relative d-flex align-items-center justify-content-between">
            <a href="/" class="logo d-flex align-items-center me-auto me-xl-0">
                <h1 class="sitename">Razaz Ayoub</h1>
            </a>

            <nav id="navmenu" class="navmenu">
                <ul>
                    <li><a href="/">Home</a></li>
                    <li><a href="/Home/About">About</a></li>
                    <li><a href="/Home/Resume">Resume</a></li>
                    <li><a href="/Home/Services">Services</a></li>
                    <li><a href="/Home/Projects">Projects</a></li>
                    <li class="hideme"><a href="/Home/Contact">Contact</a></li>
                    <li><a href="/Home/Privacy">Privacy</a></li>
                </ul>
                <i class="mobile-nav-toggle d-xl-none bi bi-list"></i>
            </nav>

            <div class="header-social-links">
                <a href="#" class="twitter hideme" target="_blank"><i class="bi bi-twitter-x"></i></a>
                <a href="https://www.facebook.com/RuzzaAyoub" class="facebook" target="_blank"><i class="bi bi-facebook"></i></a>
                <a href="https://wa.me/+971552120140" class="whatsapp hideme" target="_blank">
                    <i class="bi bi-whatsapp"></i>
                </a>

                <a href="#" class="instagram hideme" target="_blank"><i class="bi bi-instagram"></i></a>
                <a href="https://www.linkedin.com/in/razaz-ayoub-4b93b3129/" class="linkedin" target="_blank"><i class="bi bi-linkedin"></i></a>
            </div>
        </div>
    </header>


    <!-- ======= Main Content ======= -->
    <main class="main">
        @RenderBody()
    </main>

    <!-- ======= Footer ======= -->
    <footer id="footer" class="footer light-background">
        <div class="container">
            <div class="copyright text-center">
                <p>© @DateTime.Now.Year <strong class="px-1 sitename">Razaz Ayoub</strong> — All Rights Reserved</p>
            </div>
            <div class="social-links d-flex justify-content-center">
                <a href="#" class="hideme" target="_blank"><i class="bi bi-twitter-x"></i></a>
                <a href="https://www.facebook.com/RuzzaAyoub" target="_blank"><i class="bi bi-facebook"></i></a>
                <a href="https://wa.me/+971552120140" class="hideme" target="_blank"><i class="bi bi-whatsapp"></i></a>
                <a href="#" class="hideme" target="_blank"><i class="bi bi-instagram"></i></a>
                <a href="https://www.linkedin.com/in/razaz-ayoub-4b93b3129/" target="_blank"><i class="bi bi-linkedin"></i></a>
            </div>
        </div>
    </footer>

    <!-- Scroll Top -->
    <a href="#" id="scroll-top" class="scroll-top d-flex align-items-center justify-content-center">
        <i class="bi bi-arrow-up-short"></i>
    </a>

    <!-- Preloader -->
    <div id="preloader"></div>

    <!-- Vendor JS Files -->
    <script src="~/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/vendor/php-email-form/validate.js"></script>
    <script src="~/assets/vendor/aos/aos.js"></script>
    <script src="~/assets/vendor/waypoints/noframework.waypoints.js"></script>
    <script src="~/assets/vendor/purecounter/purecounter_vanilla.js"></script>
    <script src="~/assets/vendor/swiper/swiper-bundle.min.js"></script>
    <script src="~/assets/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="~/assets/vendor/imagesloaded/imagesloaded.pkgd.min.js"></script>
    <script src="~/assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>

    <!-- Main JS File -->
    <script src="~/assets/js/main.js"></script>

    @RenderSection("Scripts", required: false)

    <script>
    document.addEventListener("DOMContentLoaded", function () {
        const currentPath = window.location.pathname.toLowerCase();
        const navMenu = document.querySelector("#navmenu");
        const navLinks = navMenu.querySelectorAll("ul li a");
        const mobileToggle = document.querySelector(".mobile-nav-toggle");

        // Highlight the active link
        navLinks.forEach(link => {
            const linkPath = link.getAttribute("href").toLowerCase();

            if (currentPath === linkPath || 
                (currentPath === "/" && linkPath === "/")) {
                link.classList.add("active");
            } else {
                link.classList.remove("active");
            }

            // Handle mobile menu click
            link.addEventListener("click", function () {
                // Close mobile menu when a link is clicked
                if (document.body.classList.contains("mobile-nav-active")) {
                    document.body.classList.remove("mobile-nav-active");
                    mobileToggle.classList.toggle("bi-x");
                    mobileToggle.classList.toggle("bi-list");
                }

                // Update active link on click
                navLinks.forEach(l => l.classList.remove("active"));
                this.classList.add("active");
            });
        });
    });
</script>

</body>
</html>
